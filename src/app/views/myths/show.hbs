<div class="row">
    <div class="col s12 m8">
        <h3>{{myth.title}}
            <small>{{{editIcon myth.user user myth._id false}}}</small>
        </h3>
        <div class="card myth">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{myth.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{myth.user.displayName}}</span>
                <img src="{{myth.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/myths/user/{{myth.user._id}}">More From {{myth.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>